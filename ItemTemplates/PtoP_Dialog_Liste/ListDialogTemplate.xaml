<b:BaseWindow x:Class="$rootnamespace$.$safeitemname$"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:b="clr-namespace:PtoP_Windows_Urversion.Base"
              Title="$safeitemname$"
              Height="520" Width="700"
              ShowOkButton="False"
              ShowCancelButton="True"
              CancelButtonText="Schließen"
              ShowDeleteButton="True"
              DeleteButtonText="Löschen"
              ShowButtonBar="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Kopfzeile -->
        <TextBlock Grid.Row="0"
                   Text="$safeitemname$"
                   FontSize="18" FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <!-- Hauptbereich: Liste links, Details rechts -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- Liste -->
            <DockPanel Grid.Column="0">
                <TextBlock DockPanel.Dock="Top"
                           Text="Einträge:"
                           Foreground="{StaticResource Brush.TextSecondary}"
                           Margin="0,0,0,6"/>
                <ListBox x:Name="MainList">
                    <ListBoxItem Content="Eintrag 1"/>
                    <ListBoxItem Content="Eintrag 2"/>
                    <ListBoxItem Content="Eintrag 3"/>
                </ListBox>
            </DockPanel>

            <!-- Detail-Bereich -->
            <DockPanel Grid.Column="2">
                <TextBlock DockPanel.Dock="Top"
                           Text="Details:"
                           Foreground="{StaticResource Brush.TextSecondary}"
                           Margin="0,0,0,6"/>
                <Border Background="{StaticResource Brush.Surface}"
                        BorderBrush="{StaticResource Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="Name:" Margin="0,0,0,4"/>
                        <TextBox Margin="0,0,0,12"/>

                        <TextBlock Text="Beschreibung:" Margin="0,0,0,4"/>
                        <TextBox Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,16"/>

                        <Button Content="Übernehmen" Width="120"
                                HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </DockPanel>
        </Grid>
    </Grid>

</b:BaseWindow>
