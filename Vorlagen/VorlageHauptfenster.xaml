<Window x:Class="PtoP_Windows_Urversion.Vorlagen.VorlageHauptfenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VorlageHauptfenster"
        Height="600" Width="850"
        Style="{StaticResource PtoPWindow}">

    <DockPanel>
        <!-- ===== Button-Leiste unten ===== -->
        <Border DockPanel.Dock="Bottom"
                Background="{StaticResource Brush.ButtonPanel}"
                BorderBrush="{StaticResource Brush.Border}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="16,6"
                Margin="24,4,24,8">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Neu" MinWidth="120" Margin="0,0,12,0"/>
                    <Button Content="Bearbeiten" MinWidth="120"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>

                <Button Content="Beenden" MinWidth="120"
                        Style="{StaticResource DangerButton}"
                        HorizontalAlignment="Right"
                        Click="Beenden_Click"/>
            </Grid>
        </Border>

        <!-- Hauptinhalt -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Margin="24">
                <TextBlock Text="VorlageHauptfenster"
                           FontSize="22" FontWeight="SemiBold"
                           Margin="0,0,0,16"/>

                <TextBlock Text="Hier kommt der Inhalt des Hauptfensters."
                           Foreground="{StaticResource Brush.TextSecondary}"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>

</Window>